<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="oneMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Hallo, heute scheint die Sonne!" TextColor="Red" FontSize="Large"></Label>
            <Entry x:Name="eName" Placeholder="Bitte Name eingeben:"></Entry>
            <Button Text="Click" Clicked="Button_Clicked"></Button>
            <Label x:Name="lWelcome"></Label>
           
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
