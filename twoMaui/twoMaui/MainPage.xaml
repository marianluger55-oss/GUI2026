<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="twoMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Bitte eine Zahl eingeben"></Label>
            <Entry x:Name="xnumber" Placeholder="Bitte eine Zahl eingeben:"></Entry>
            <Button Text="Click" Clicked="Button_Clicked"></Button>
            <Label x:Name="ltext"></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
